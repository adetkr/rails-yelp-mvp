<h1> Add a new restaurant</h1>


<div class="container">

  <%= simple_form_for @restaurant do |f| %>
    <%= f.input :name %>
    <%= f.input :address %>
    <%= f.input :phone_number %>
    <%= f.input :category, as: :select, collection: %w(chinese italian japanese french belgian) %>
    <%= f.submit "Create Restaurant" %>
  <% end %>
</div>



